<Window x:Class="PL.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ScheduleWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <!--<DataGrid d:ItemsSource="{d:SampleData ItemCount=5}"/>-->
        <DataGrid/>
        <Label Content="Schedule Date:" HorizontalAlignment="Left" Margin="448,48,0,0" VerticalAlignment="Top" Height="31" Width="93"/>
        <Button Content="Add Schedule Date" HorizontalAlignment="Left" Margin="265,47,0,0" VerticalAlignment="Top" Height="24" Width="109" Click="btnUpdateDate_Click"/>
        <DatePicker HorizontalAlignment="Left" Margin="626,48,0,0" VerticalAlignment="Top" SelectedDate="{Binding ScheduleDate, Mode=TwoWay}"/>
        <TextBlock HorizontalAlignment="Left" Margin="42,110,0,0" TextWrapping="Wrap" Text="{Binding CurrentTask, Mode=OneWay}" VerticalAlignment="Top" Height="324" Width="721"/>

    </Grid>
</Window>

            <ListBoxItem Loaded="ListBoxItem_Loaded"/>
            <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="IsSelected">
                            <Setter.Value>
                                <MultiBinding Converter="{StaticResource ListItemSelectionConverter}">
                                    <!-- Binding עבור תכונת IsSelected של ה-ListBoxItem -->
                                    <Binding Path="Dependencies" RelativeSource="{RelativeSource Mode=Self}"/>
                                    <!-- Binding עבור תכונה אחרת במודל שלך -->
                                    <Binding Path="Task"/>
                                </MultiBinding>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <CheckBox IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" />

                        <!--<Label Content="{Binding Dependencies}"/>-->
                        <StackPanel>
                            
                            <TextBlock Text="{Binding Id}"/>
                            <TextBlock Text="{Binding Alias}"/>
                            <TextBlock Text="{Binding Description}"/>
                            <TextBlock Text="{Binding Status}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

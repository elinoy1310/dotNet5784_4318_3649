<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <!---present the list of engineers in new window-->
        <Button Content="Handle Engineers" HorizontalAlignment="Left" Margin="112,337,0,0" VerticalAlignment="Top" Height="39" Width="92" RenderTransformOrigin="3.319,-2.026" Click="btnEnginnersList_Click"/>
        <!---initialize all the data-->
        <Button Content="Initialize DataBase" HorizontalAlignment="Left" Margin="253,337,0,0" VerticalAlignment="Top" Height="39" Width="119" RenderTransformOrigin="3.319,-2.026" Click="btnInitialization_Click"/>
        <!---clear all the data-->
        <Button Content="Reset DataBase" HorizontalAlignment="Left" Margin="400,337,0,0" VerticalAlignment="Top" Height="39" Width="92" RenderTransformOrigin="3.319,-2.026" Click="btnReset_Click"/>
    </Grid>
</Window>

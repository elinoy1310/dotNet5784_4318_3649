<Window x:Class="PL.UserEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="User Entry Window" Height="450" Width="800"
        DataContext="{Binding MyUser , RelativeSource={RelativeSource Mode=Self}}">
    <Window.Resources>
        <FontFamily x:Key="myPasswordFont">"/password-font.ttf"

        </FontFamily>
    </Window.Resources>
    <Canvas>
        <Label Content="user name:" Height="45" Width="80" Margin="100,172,620,217"/>
        <Label Content="password:" Height="45" Width="80" Margin="100,241,620,148"/>
        <TextBox Text="{Binding UserId, Mode=TwoWay}" Height="23" Canvas.Left="185" Canvas.Top="172" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200"  />
        <Button Content="Enter" Height="45" Width="80" Margin="228,297,492,92" Click="btnEnter_Click"/>
        <PasswordBox PasswordChanged="pbGetPassword" Width="197" Height="18" Canvas.Left="484" Canvas.Top="246" />
        <!--<TextBox Text="{Binding passWord,Mode=TwoWay}" HorizontalAlignment="Left" Margin="188,246,0,0" VerticalAlignment="Top" Width="197" Height="18" FontFamily="/password-font.ttf"/>-->
    </Canvas>
</Window>
